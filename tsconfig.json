{
  "compilerOptions": {
    "outDir":"dist",
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@component/*": [
        "./*"
      ]
    },
    "noEmit": false,
    "incremental": true,
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "server/db.js",
    "server/card.js",
    "server/seed.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],

}
